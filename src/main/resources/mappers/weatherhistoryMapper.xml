<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.dlqudwp.spring.test.jstl.repository.WeatherRepository">

	<select id="selectWeatherHistory" 
	resultType="com.dlqudwp.spring.test.jstl.domain.Weather">
		SELECT 
			`id`
			, `weather`
			, `date`
			, `temperatures`
			, `precipitation`
			, `microDust`
			, `windSpeed`
			, `createdAt`
			, `updatedAt`
		FROM 
			`weather`
	
	</select>
	
	<insert id="insertWeather" parameterType="map">
		INSERT INTO 
			`weather`
		(
			`weather`
			, `date`
			, `temperatures`
			, `precipitation`
			, `microDust`
			, `windSpeed`
		)
		VALUE 
		(
			#{weather}
			, #{date}
			, #{temperatures}
			, #{precipitation}
			, #{microDust}
			, #{windSpeed}	
		)
	
	
	</insert>
	
	
	<insert id="insertWeatherByObject" parameterType="com.dlqudwp.spring.test.jstl.domain.Weather">
		INSERT INTO 
			`weather`
		(
			`weather`
			, `date`
			, `temperatures`
			, `precipitation`
			, `microDust`
			, `windSpeed`
		)
		VALUE 
		(
			#{weather}
			, #{date}
			, #{temperatures}
			, #{precipitation}
			, #{microDust}
			, #{windSpeed}
		)
		
	
	</insert>


</mapper>